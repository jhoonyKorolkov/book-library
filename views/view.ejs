<%- include('main/header', { title: 'Book List' }) %>

<div class="container mt-5">
  <div class="card">
    <div class="card-header">
      <h1><%= book.title %></h1>
    </div>
    <div class="card-body">
      <p class="card-text"><strong>Author:</strong> <%= book.author %></p>
      <p class="card-text">
        <strong>Description:</strong> <%= book.description %>
      </p>
      <div class="btn-group" role="group" aria-label="Book Actions">
        <a class="btn btn-primary" href="/books/<%= book.id %>/download"
          >Download file</a
        >
        <a class="btn btn-secondary" href="/books/edit/<%= book.id %>">Edit</a>
        <form
          action="/books/<%= book.id %>?_method=DELETE"
          method="POST"
          style="display: inline"
        >
          <a
            class="btn btn-danger"
            href="/books/delete/<%= book.id %>"
            onclick="return confirm('Are you sure you want to delete this book?');"
            >Delete</a
          >
        </form>
        <a class="btn btn-secondary" href="/">Back to list</a>
      </div>
    </div>
  </div>
</div>

<%- include('main/footer') %>
