<%- include('../main/header', { title: 'Profile' }) %>

  <style>
    .card-custom {
      border: 1px solid #dee2e6;
      border-radius: 0.25rem;
      box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .card-header-custom {
      background-color: #343a40;
      color: #ffffff;
      text-align: center;
    }

    .card-body-custom {
      padding: 20px;
    }

    .btn-group-custom .btn {
      margin: 0 5px;
    }

    .card img {
      display: block;
      margin: 20px 0;
      max-width: 350px;
      height: auto;
    }
  </style>

  <div class="container mt-5">
    <div class="card card-custom">
      <div class="card-header card-header-custom">
        <h1>
          <%= user.username %>
        </h1>
      </div>
    </div>
  </div>

  <%- include('../main/footer') %>