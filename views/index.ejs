<%- include('main/header', { title: 'Список книг' }) %>

<style>
  .book-list-container {
    max-width: 800px;
    margin: 0 auto;
    padding: 20px;
    background-color: #ffffff;
    border-radius: 0.25rem;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
  }

  .book-list-container h1 {
    text-align: center;
    margin-bottom: 20px;
  }

  .list-group-item {
    transition: background-color 0.3s;
  }

  .list-group-item:hover {
    background-color: #f8f9fa;
  }

  .btn-container {
    text-align: center;
    margin-top: 20px;
  }
</style>

<div class="container mt-5 book-list-container">
  <h1>Список книг</h1>
  <% if (books.length) { %>
  <ul class="list-group">
    <% books.forEach(book=> { %>
    <a href="/books/<%= book._id %>" class="list-group-item">
      <%= book.title %>
    </a>
    <% }) %>
  </ul>
  <div class="btn-container">
    <a class="btn btn-primary" href="/books/create">Добавить новую книгу</a>
  </div>
  <% } else { %>
  <p class="text-center">Нет доступных книг. Пожалуйста, добавьте новую книгу.</p>
  <div class="btn-container">
    <a class="btn btn-primary" href="/books/create">Добавить новую книгу</a>
  </div>
  <% } %>
</div>

<%- include('main/footer') %>